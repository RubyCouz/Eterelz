{% extends'base.html.twig' %}
{% block title %}Votre panier
{% endblock %}
{% block body %}
    <div>
        <h1>Votre panier</h1>
    </div>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.productTitle }}</td>
                    <td>{{ item.product.productPrice }} €</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.productPrice * item.quantity}} €</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id': item.product.id}) }}"class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3"class="text-right">Total :
                </td>
                <td>{{ total }} €</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}
{% endblock %}