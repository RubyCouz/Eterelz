{% extends'base.html.twig' %}

{% block title %}Récapitulatif{% endblock %}

{% block body %}

    <div>
        <h1 id="panier">Récapitulatif de votre commande</h1>
    </div>

{% if items | length > 0 %}
    <div id="table1">
        <table class="table">
            <thead>
            <tr>
                <th id="image_panier1">Produit</th>
                <th id="produits2">Description</th>
                <th id="prix">Prix unitaire</th>
                <th id="quantite">Quantité</th>
                <th id="total">Sous-Total</th>
                <th id="supp"></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td><img id="image_panier" src="{{ asset('img/upload/product/' ~ item.product.productImage) }}" alt="Image de {{ item.product.productTitle }}"></td>
                    <td>{{ item.product.productTitle }}</td>
                    <td>{{ item.product.productPrice | number_format(2,',','.') }} &euro;</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ (item.product.productPrice * item.quantity) | number_format(2,',','.') }} &euro;</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td></td>
                <td colspan="3" class="text-right">Total :</td>
                <td id="text-right">{{ total | number_format(2,',','.') }} &euro;</td>
                <td><a href="#" class="btn btn-success"><i class="fas fa-check-circle mr-2"></i>PAYER</a></td>
            </tr>
            </tfoot>
        </table>
        </div>
        <div id="boutique">
        <a href="{{ path('product_index') }}" class="btn btn-info"><i class="fas fa-arrow-circle-left mr-2"></i>CONTINUER MES ACHATS</a>
        </div>

        <div>
            <p id="livraison">Adresse de livraison</p>
            {#{{ eter_user.userAdress }}#}
        </div>

{% endif %}
        
{% endblock %}