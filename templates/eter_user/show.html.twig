{% extends 'base.html.twig' %}

{% block title %}Affichage du profil{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row profil">
            <div class="col s4 offset-s2">
                <img id="image"
                     src="{{ asset('img/upload/profil_pic/' ~ eter_user.userAvatar) | imagine_filter('profil') }}"
                     alt="default_profil" class="circle profil-pic">
            </div>
            <div class="col s6">
                <div class="row">
                    <div class="col s3">
                        <p class="white-text">Pseudo : </p>
                    </div>
                    <div class="col s9">
                        <p class="white-text">{{ app.user.userLogin }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s3">
                        <p class="white-text">Adresse Email : </p>
                    </div>
                    <div class="col s9">
                        <p class="white-text">{{ app.user.userMail }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s3">
                        <p class="white-text">Discord : </p>
                    </div>
                    <div class="col s9">
                        <p class="white-text">{{ app.user.userDiscord }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s3">
                        <p class="white-text">Discord : </p>
                    </div>
                    <div class="col s9">
                        <p class="white-text">{{ app.user.userDiscord }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s3">
                        <p class="white-text">Mes clans : </p>
                    </div>
                    <div class="col s9">
                        <div class="row">
                            {% for clan in app.user.userClan %}
                            <div class="col s3">
                                <p class="white-text">{{ (clan.clanName) == null ? 'Pas de clan' : clan.clanName }}</p>
                            </div>
                            <div class="col s9">

                                <img src="{{ asset('img/upload/ban/' ~ clan.clanBan) | imagine_filter('profil') }}"
                                     class="circle responsive-img"
                                     alt="Bannière du clan {{ clan.clanName }}"
                                     title="Bannière du clan {{ clan.clanName }}">
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row profil">
            <div class="col s6 center-align">
                <p class="white-text">
                    Description :
                </p>
            </div>
            <div class="col s6">
                <p class="white-text">
                    {{ (app.user.userDescription == null) ? 'Pas de description' : app.user.userDescription }}
                </p>
            </div>
        </div>
        <div class="row profil">
            <div class="col s12 center-align">
                <h2
                class="white-text">Mes informations personnelles</h2>
            </div>
        </div>
        <div class="row">
            <div class="col s3 center-align">
                <p class="white-text">Adresse :</p>
            </div>
            <div class="col s3 left-align">
                <p class="white-text">{{ (app.user.userAddress) == null ? 'Pas d\'adresse communiquée ' : app.user.userAddress }}</p>
            </div>
            <div class="col s3 center-align">
<p class="white-text">Code postal :</p>
            </div>
            <div class="col s3 left-align">
                <p class="white-text">{{ (app.user.userZip) == null ? 'Pas de code postal ' : app.user.userZip }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col s3 center-align">
                <p class="white-text">Ville :</p>
            </div>
            <div class="col s3 left-align">
                <p class="white-text">{{ (app.user.userCity) == null ? 'Pas de ville communiquée ' : app.user.userCity }}</p>
            </div>
            <div class="col s3 center-align">
                <p class="white-text">Mes tags :</p>
            </div>
            <div class="col s3 left-align">
                <p class="white-text">{{ app.user.userDate }}</p>
            </div>
        </div>
    </div>
