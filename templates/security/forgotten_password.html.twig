{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" id="forgot">

        {# Affichage du logo Eterelz #}
        <img id="forgot_img" src="{{ asset('img/logo/logoEterelzBlanc.png') }}" class="responsive-img" alt="Logo Eterelz" title="Logo Eterelz">

        <h1 id="forgot_pass1" class="white-text">Mot de passe oublié</h1>

        {# Installation de la balise form de départ #}
        {{ form_start(emailForm,{attr: {novalidate: 'novalidate'}}) }}

        <div class="row">
            <div id="forgot_pass2" class="col s12">
            </div>
            <div class="col s12">
                {{ form_widget(emailForm.email, {'id' : 'emailf'}) }}
                <span id="alertforgot"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s12 right-align">
                <button type="submit" id="bouton_envoi3" class="waves-effect waves-light btn btn-rounded purple darken-1">ENVOYER</button>
            </div>
        </div>
        {# Installation de la balise form de fin #}
        {{ form_end(emailForm) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/password_jquery.js') }}"></script>
{% endblock %}


