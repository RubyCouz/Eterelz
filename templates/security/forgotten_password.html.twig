{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

        {# Affichage du logo Eterelz #}
        <img id="forgot_img" src="{{ asset('img/logo/logoEterelz.png') }}" class="align-center col-12" alt="Logo Eterelz" title="Logo Eterelz">

            <h1 id="forgot_pass1">Mot de passe oublié</h1>   

            {# Installation de la balise form de départ #}
            {{ form_start(emailForm,{attr: {novalidate: 'novalidate'}}) }}

            <div class="row">
                <div id="forgot_pass2" class="col-12">
                    <label for="forgot_pass">MAIL :</label>
                </div>
                <div class="col-12">
                    {{ form_widget(emailForm.email, {'id':'email'}) }}
                    <span id="alert8"></span>
                </div>
            </div>

            <button type="submit" id="bouton_envoi3" class="btn btn-primary">ENVOYER</button>

            {# Installation de la balise form de fin #}
            {{ form_end(emailForm) }}
        
</div>

{% endblock %}

{% block javascripts %}

<script src="{{ asset('js/forgotten_password_jquery.js') }}"></script>

{% endblock %}