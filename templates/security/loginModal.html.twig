                {{ form_widget(form.user_mail) }}
            </div>

            <div id="login_modal" class="md-form form-sm mb-5">
                <i class="fab fa-discord prefix"></i>
                {{ form_label(form.user_discord, 'Votre ID Discord') }}
                {{ form_widget(form.user_discord) }}
            </div>

