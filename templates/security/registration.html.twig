{% extends 'base.html.twig' %}

{% block body %}

<div uk-grid>
    <div class="uk-width-1-8@m"></div>
    {# inscription card #}
    <div class="uk-margin-auto uk-margin-auto-vertical uk-card uk-card-default uk-width-1-2@m">
        <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
                <div class="uk-width-auto uk-align-center">
                    <img src="{{ asset('img/logo/logoEterelz.png') }}" class="logoSignin uk-align-center"
                        alt="Logo Eterelz" title="Logo Eterelz">
                </div>
            </div>
        </div>

        <div class="uk-card-body">
        
            {# Installation de la balise form de départ #}
            {{ form_start(form,{attr: {novalidate: 'novalidate'}}) }}

            <p><b>Les champs munis d'une étoile sont obligatoires</b></p>
        
            {% if form_errors(form.user_login) is not empty %}
            <div class="uk-alert uk-alert-danger" >{{ form_errors(form.user_login) }}</div>
            {% endif %}

            {# Affichage des champs du formulaire #}
                <p>{{ form_row(form.user_avatar) }}</p>
                <p>{{ form_row(form.user_login) }}</p>
                <p>{{ form_row(form.user_mail)}}</p>
                <p>{{ form_row(form.user_address)}}</p>
                <p>{{ form_row(form.user_zip)}}</p>
                <p>{{ form_row(form.user_city)}}</p>
                <p>{{ form_row(form.user_discord)}}</p>
                <p>{{ form_row(form.user_sex)}}</p>
                <p>{{ form_row(form.user_description)}}</p>
                <p>{{ form_row(form.user_password)}}</p>
                <p>{{ form_row(form.confirm_user_password)}}</p>
                <br>
            <button type="submit" class="uk-margin-top uk-button uk-button-secondary uk-align-center">S'inscrire !</button>
        
            {# Installation de la balise form de fin #}
            {{ form_end(form) }}
        
        </div>
    </div>
</div>

{% endblock %}