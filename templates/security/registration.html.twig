{% extends 'base.html.twig' %}

{% block body %}

<div class="uk-container uk-background-default">
    <h1>Inscription</h1>

        {# Installation de la balise form de d√©part #}
        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
        
            {# Affichage des champs du formulaire #}
            <div class="uk-margin">
            {{ form_row(form.user_login) }}</br>
            {{ form_row(form.user_mail)}}</br>
            {{ form_row(form.user_address)}}</br>
            {{ form_row(form.user_zip)}}</br>
            {{ form_row(form.user_city)}}</br>
            {{ form_row(form.user_discord)}}</br>
            {{ form_row(form.user_sex)}}</br>
            {{ form_row(form.user_description)}}</br>
            {{ form_row(form.user_password)}}</br>
            {{ form_row(form.confirm_user_password)}}</br>

            <button type="submit" class="uk-button uk-button-primary">S'inscrire !</button>
            </div>
        {# Installation de la balise form de fin #}
        {{ form_end(form) }} 
</div>

{% endblock %}