{% extends 'base.html.twig' %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {% block body %}
            <div class="container">
                {# Installation de la balise form de départ #}
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                    <div id="oblig">Les informations précédées d'un * sont obligatoires</div>

                    {# Affichage des champs du formulaire #}
                    <div class="form-group">
                        {{ form_row(form.user_avatar) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_login) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_mail) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_address) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_zip) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_city) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_discord) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_sex) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_description) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.user_password) }}
                            <div class="progress">
                                <div class="progress-bar" value="0" max="100" id="strength"></div>
                            </div>
                    </div>
            
                    <div class="form-group">
                            {{ form_row(form.confirm_user_password)}}
                    </div>

                        <button type="submit" class="btn btn-success">S'inscrire !</button>
                
                {# Installation de la balise form de fin #}
                {{ form_end(form) }}
            </div>
{% endblock %}
